# mise 設定檔範例
# 此檔案由 dandori 自動產生
# 位置: ~/.config/mise/config.toml

# ============================================
# 工具版本設定
# ============================================

[tools]
# 使用 "latest" 永遠追蹤最新穩定版
python = "latest"
erlang = "latest"
elixir = "latest"
node = "latest"

# 或指定特定版本
# python = "3.12"      # 主版本
# python = "3.12.1"    # 完整版本
# node = "20"          # Node LTS

# 其他支援的語言
# rust = "latest"
# ruby = "latest"
# go = "latest"
# java = "latest"

# ============================================
# 進階設定（可選）
# ============================================

# [settings]
# # 啟用實驗性功能
# experimental = true

# # 啟用詳細日誌
# verbose = false

# # 設定任務執行器
# task_runner = "task"

# [env]
# # 設定環境變數
# EDITOR = "vim"
# LANG = "en_US.UTF-8"

# ============================================
# 專案特定設定
# ============================================
# 如果你想在特定專案使用不同版本：
# 1. 在專案目錄建立 .mise.toml
# 2. 指定該專案的版本需求
#
# 範例：
# [tools]
# python = "3.11"  # 此專案使用 Python 3.11
# node = "18"      # 此專案使用 Node 18

# ============================================
# 使用方式
# ============================================
#
# 查看已安裝版本：
#   mise list
#
# 安裝所有工具：
#   mise install
#
# 更新到最新版：
#   mise upgrade
#
# 安裝特定版本：
#   mise install python@3.11
#
# 查看可用版本：
#   mise list-remote python
#
# 設定專案版本：
#   cd your-project
#   mise use python@3.11
#
# 更多資訊請參考：https://mise.jdx.dev
